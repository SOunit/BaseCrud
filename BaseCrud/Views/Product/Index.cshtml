@model IEnumerable<Product>;

<h1>Product</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Name</td>
				<td>@product.Age</td>
				<td>
					<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
					<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-secondary">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<div class="mt-5">
	<a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Create">Create New Product</a>
</div>